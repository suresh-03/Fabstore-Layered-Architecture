@model Dictionary<string, List<string>>

<!-- Check if the model (categories dictionary) is not null -->
@if (Model != null)
    {
    // Loop through each category group (e.g., by gender or parent category)
    foreach (var categoryGroup in Model)
        {
        // Display the group name as a heading
        <h3>@categoryGroup.Key.ToUpper()</h3>
        <ul id="menu-items">
            // Loop through each subcategory in the group
            @foreach (var subCategory in categoryGroup.Value)
                {
                <li>
                    <!-- Link to the Product Index page filtered by subcategory -->
                    <a asp-controller="Product" asp-action="Index" asp-route-category="@subCategory">
                        @char.ToUpper(subCategory[0])@subCategory.Substring(1)
                    </a>
                </li>
                }
        </ul>
        }
    }
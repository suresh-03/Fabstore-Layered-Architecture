<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-COM</title>
    <link rel="icon" type="image/png" href="~/images/e-com.png" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
            <div class="navbar">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index"><img src="~/images/e-com.png"></a>
                </div>
                <div class="search-box">
                    <input type="search" placeholder="Search E-COM...">
                    <a asp-controller="Home" asp-action="Index">Search</a>
                </div>
                <nav>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Products</a></li>
                        <li><a asp-controller="Home" asp-action="Index">About</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Contact</a></li>
                        <li><a asp-controller="Home" asp-action="Index">Account</a></li>
                    </ul>
                    <a asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e3e3e3"><path d="M280-80q-33 0-56.5-23.5T200-160q0-33 23.5-56.5T280-240q33 0 56.5 23.5T360-160q0 33-23.5 56.5T280-80Zm400 0q-33 0-56.5-23.5T600-160q0-33 23.5-56.5T680-240q33 0 56.5 23.5T760-160q0 33-23.5 56.5T680-80ZM246-720l96 200h280l110-200H246Zm-38-80h590q23 0 35 20.5t1 41.5L692-482q-11 20-29.5 31T622-440H324l-44 80h480v80H280q-45 0-68-39.5t-2-78.5l54-98-144-304H40v-80h130l38 80Zm134 280h280-280Z"/></svg>
                    </a>
                </nav>
            </div>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="col-3">
            <h3>Useful Links</h3><br>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Index">Products</a></li>
                <li><a asp-controller="Home" asp-action="Index">About</a></li>
                <li><a asp-controller="Home" asp-action="Index">Contact</a></li>
                <li><a asp-controller="Home" asp-action="Index">Account</a></li>
            </ul>
        </div>
        <div class="col-3">
            <h3>Get Us</h3><br>
            <a asp-controller="Home" asp-action="Index"><img src="~/images/app-store.png"></a>
            <a asp-controller="Home" asp-action="Index"><img src="~/images/play-store.png"></a>
        </div>
        <div class="col-3">
            <h3>Connect With Us</h3><br>
            <ul>
                <li><a asp-controller="Home" asp-action="Index">Twitter</a></li>
                <li><a asp-controller="Home" asp-action="Index">Facebook</a></li>
                <li><a asp-controller="Home" asp-action="Index">Instagram</a></li>
            </ul>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
